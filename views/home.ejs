<!DOCTYPE html>
<html lang="en">
<head>
    
    <%- include("./partials/head")%>
    <title>Homepage</title>
</head>
<body>
    <%- include("./partials/nav", { user: user,blogs:blogs }) %> <!-- Correctly pass the user here -->
   
    <div class="container mt-5">
        <div class="row">
            <% blogs.forEach(blog => { %>
                <div class="col-md-4 mb-4">
                    <div class="card" style="height: 450px;">
                        <!-- Blog Cover Image -->
                        <img src="<%= blog.coverImageURL %>" class="card-img-top" style="height: 200px; object-fit: cover;" alt="Blog Cover Image">
    
                        <!-- Blog Details -->
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title"><%= blog.title %></h5>
                            <p class="card-text" style="flex-grow: 1;">
                                <%= blog.body.split(' ').slice(0, 20).join(' ') %><% if (blog.body.split(' ').length > 50) { %>...<% } %>
                            </p>
                            
                            <a href="/blog/get-blog/<%= blog._id %>" class="btn btn-primary mt-auto">Read</a>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
    

    
    <%- include("./partials/scripts")%>
    
</body>
</html>