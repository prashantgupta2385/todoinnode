<!DOCTYPE html>
<html lang="en">
<head>
    
    <%- include("./partials/head")%>
    <title>add-blog</title>
</head>
<body>
    <%- include("./partials/nav") %> <!-- Correctly pass the user here -->
    <div class="container mt-5">
        <h2 class="text-center mb-4">Create a Post</h2>
        <form action="/blog/add-new" method="post" enctype="multipart/form-data">
            <!-- File Upload -->
            <div class="mb-3">
                <label for="coverImage" class="form-label">Upload File</label>
                <input type="file" class="form-control" id="coverImage" name="coverImage">
            </div>
            
            <!-- Title -->
            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input type="text" class="form-control" id="title" name="title" placeholder="Enter title">
            </div>
            
            <!-- Body -->
            <div class="mb-3">
                <label for="body" class="form-label">Body</label>
                <textarea class="form-control" id="body" name="body" rows="5" placeholder="Enter post content"></textarea>
            </div>
            
            <!-- Add Button -->
            <div class="text-center">
                <button type="submit" class="btn btn-primary">Add</button>
            </div>
        </form>
    </div>
  
    <%- include("./partials/scripts")%>
    
</body>
</html>